<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="style.css">
  <title>Chats</title>
</head>
<body>
  <h1>All Chats!</h1>
  <form action="/chats/new" method="get">
    <button>New Chat</button>
  </form>
  <br>
  <% for (let chat of chats) { %>
    <div class="chat">
      <form action="/chat/<%=chat._id%>/delete?_method=DELETE" method="post">
      <button><i class="fa-solid fa-trash-can"></i></button>
    </form>
      <p>From : <i><%= chat.from  %></i></p>
      <div class="msg">
        <p>Message : <%= chat.msg %></p>
      </div>
      <p>Received by : <i><%= chat.to %></i></p>
      <hr>
      <p> <%= chat.created_at.toString().split(" ")[4] %> </p>
      <p> <%= chat.created_at.toString().split(" ").slice(0, 4).join("-") %> </p>
      <form action="/chats/<%=chat._id%>/edit" method="get">
        <button><i class="fa-regular fa-pen-to-square"></i></button>
      </form>
    </div>
    <br><br>
  <% } %>
</body>
</html>