<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <style>
    table{
      /* width: 100%; */
      border: 1px solid black;
      border-collapse: collapse;
      th, tr, td{
        border: 1px solid black;
      }
    }
  </style>
</head>
<body>
  <table>
    <tr>
      <th>S No.</th>
      <th>Id</th>
      <th>Email</th>
      <th>Username</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% i = 0 %>
    <% for (user of users) { %>
    <% i = i + 1 %>
      <tr>
        <td><%= i %></td>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <form method="GET" action="/user/<%=user.id%>/edit">
            <button>Edit Username</button>
          </form>
        </td>
        <td>
          <form method="GET" action="/user/<%=user.id%>/delete">
            <button>Delete</button>
          </form>
        </td>
      </tr>
    <% } %>
  </table>
</body>
</html>
